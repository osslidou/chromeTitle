{
    "manifest_version": 2,
    "name": "Social Patrol",
    "version": "1.0",
    "background": {
        "scripts": [
            "jquery-2.1.4.min.js",     
            "jquery-3.1.1.min.js",     
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "hootsuite.png",
         "name": "Click to change the icon's color",
         "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "http://*/*",
        "https://*/*",
        "chrome://version/strings.js",
        "contextMenus",
        "topSites","notifications","storage"
    ],
    "icons": {
          "300": "hootsuite.png"
        },
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}